<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context="top.renk.tvtopbox.ui.MainActivity">

    <Button
        android:id="@+id/list_arr_left"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_weight="0.15"
        android:background="@drawable/arr_left_button"
        android:gravity="center_vertical"
        android:visibility="invisible" />

    <top.renk.tvtopbox.widget.CustomRecyclerView
        android:id="@+id/list_arr_recycler_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </top.renk.tvtopbox.widget.CustomRecyclerView>

    <Button
        android:id="@+id/list_arr_right"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="0.15"
        android:background="@drawable/arr_right_button"
        android:visibility="invisible" />
</LinearLayout>
